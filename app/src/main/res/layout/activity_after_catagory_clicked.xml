<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pranto.krishokerhasi.activity.after_catagory_clicked">


    <!--LinearLayout1 nisi jeno mobile screen er uporer bar theke option gula ektu distance e ase-->

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:orientation="horizontal"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:background="@drawable/selection_075"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">


    </LinearLayout>

    <!--Relative_layout_for_options er vitor common page er sob option gula rakbo :) -->

    <RelativeLayout
        android:id="@+id/Relative_layout_for_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LinearLayout1">

        <Button
            android:id="@+id/Crops_button"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@mipmap/crops"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Crops_button"
            android:text="ফসল"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:textColor="@android:color/background_dark"
            />

        <Button
            android:id="@+id/Fruits_button"
            android:layout_marginLeft="210dp"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@mipmap/fruits"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Fruits_button"
            android:text="ফলমূল"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="240dp"
            android:textColor="@android:color/background_dark"
            />

        <Button
            android:id="@+id/Fish_button"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@mipmap/fish"
            android:layout_below="@+id/Crops_button"
            android:layout_marginTop="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/Fish_button_text"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:layout_below="@+id/Fish_button"
            android:text="মাছ"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:textColor="@android:color/background_dark"
            />

        <Button
            android:id="@+id/Animal_button"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@mipmap/animals"
            android:layout_marginLeft="210dp"
            android:layout_below="@+id/Fruits_button"
            android:layout_marginTop="100dp"/>


        <TextView
            android:id="@+id/animal_button_text"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Animal_button"
            android:text="গবাদিপশু"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="233dp"
            android:textColor="@android:color/background_dark"
            />

    </RelativeLayout>


</RelativeLayout>
